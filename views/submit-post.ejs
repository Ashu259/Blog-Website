<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Submit your Blog</h1>
    <div class="col-lg-6 mx-auto">
        <p class="lead">Post a blog about any tech skill or share your interview experience with thousands of web developers across the world. Fill out our form to get started.</p>
    </div>
</div>

<div class="row justify-content-center">

    <% if(infoSubmitObj != '') { %> 
        <div class="col-8 alert alert-success" role="alert">
            <%= infoSubmitObj %> 
        </div>
    <% } %>
    
    <% if(infoErrorsObj != '') { %> 
        <div class="col-8 alert alert-danger" role="alert">
            <%= infoErrorsObj[0].message %> 
        </div>
    <% } %>

    <div class="col-8">

        <form action="/submit-blog" method="post" enctype="multipart/form-data">

            <div class="row g-3">

                <div class="col-12">
                    <label for="name" class="form-label">Blog Title</label>
                    <input type="text" name="name" id="name" class="form-control required">
                </div>

                <div class="col-12">
                    <label for="description" class="form-label">Blog Content</label>
                    <textarea name="description" id="description" class="form-control required" cols="30" rows="4"></textarea>
                </div>
                
                <div class="col-12">
                    <label for="difficulty">Blog Difficulty</label>
                    <select name="difficulty" aria-label="Difficulty" class="form-select form-control required">
                        <option selected>Select Difficulty</option>
                        <option value="Easy">Easy</option>
                        <option value="Medium">Medium</option>
                        <option value="Hard">Hard</option>
                    </select>
                </div>
                
                <div class="col-12">
                    <label for="category">Blog Category</label>
                    <select name="category" aria-label="Category" class="form-select form-control required">
                        <option selected>Select Category</option>
                        <option value="FrontEnd">FrontEnd</option>
                        <option value="BackEnd">BackEnd</option>
                        <option value="Languages">Languages</option>
                        <option value="Interview Experiences">Interview Experiences</option>
                        <option value="DSA">DSA</option>
                    </select>
                </div>
                
                <div class="col-12">
                    <label for="image" class="form-label">Blog Image</label>
                    <input type="file" class="form-control required" name="image" accept="image/*">
                </div>
                
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Submit Blog</button>
                </div>

            </div>

        </form>

    </div>
</div>